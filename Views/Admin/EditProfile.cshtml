@model EntityLayer.Concrete.Admin
@{
    ViewBag.Title = "EditProfile";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@using (Html.BeginForm("EditProfile", "Admin", FormMethod.Post))
{
    <div class="~/pluto-1.0.0/profile_img mt-2" ><img width="180" class="rounded-circle" src="@Html.DisplayFor(x=>x.AdminImg)" alt="#" /></div>

    <div class="form-group mt-3">

        @Html.Label("Admin Adı")
        @Html.TextBoxFor(x => x.AdminUserName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.AdminUserName)
        <br />
        @Html.Label("Admin Mail")
        @Html.TextBoxFor(x => x.AdminMail, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.AdminMail)
        <br />
        @Html.Label("Admin Şifre")
        @Html.TextBoxFor(x => x.AdminPassword, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.AdminPassword)
        <br />
        @Html.Label("Admin Resim")
        @Html.TextBoxFor(x => x.AdminImg, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.AdminImg)
        <br />

        @Html.HiddenFor(x => x.AdminID)
        @Html.HiddenFor(x => x.AdminRole)
        @Html.HiddenFor(x => x.WebSkill)
        @Html.HiddenFor(x => x.DeveloperSkill)
        @Html.HiddenFor(x => x.ExecutiveSkill)
        @Html.HiddenFor(x => x.communicationSkill)


        <button class="btn btn-info">Admin Profilini Düzenle</button>

    </div>
}
