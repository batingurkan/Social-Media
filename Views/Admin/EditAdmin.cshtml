@model EntityLayer.Concrete.Admin
@{
    ViewBag.Title = "EditAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@using (Html.BeginForm("EditAdmin", "Admin", FormMethod.Post))
{
    <div class="~/pluto-1.0.0/profile_img mt-2"><img width="180" class="rounded-circle" src="@Html.DisplayFor(x=>x.AdminImg)" alt="#" /></div>

    <div class="form-group mt-3">

        @Html.Label("Admin Adı")
        @Html.TextBoxFor(x => x.AdminUserName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.AdminUserName)
        <br />
        @Html.Label("Admin Mail")
        @Html.TextBoxFor(x => x.AdminMail, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.AdminMail)
        <br />
        @Html.Label("Admin Şifre")
        @Html.TextBoxFor(x => x.AdminPassword, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.AdminPassword)
        <br />
        @Html.Label("Admin Resim")
        @Html.TextBoxFor(x => x.AdminImg, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.AdminImg)
        <br />
        @Html.Label("Admin Ünvan")
        @Html.TextBoxFor(x => x.AdminTitle, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.AdminTitle)
        <br />
        @Html.Label("Admin Rol")
        @Html.TextBoxFor(x => x.AdminRole, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.AdminRole)
        <br />
        @Html.Label("Web Skill")
        @Html.TextBoxFor(x => x.WebSkill, new { @class = "form-control" })

        <br />
        @Html.Label("Developer Skill")
        @Html.TextBoxFor(x => x.DeveloperSkill, new { @class = "form-control" })

        <br />
        @Html.Label("Executive Skill")
        @Html.TextBoxFor(x => x.ExecutiveSkill, new { @class = "form-control" })

        <br />
        @Html.Label("Communication Skill")
        @Html.TextBoxFor(x => x.communicationSkill, new { @class = "form-control" })


        @Html.HiddenFor(x => x.AdminID)

        <br />

        <button class="btn btn-info">Admini Düzenle</button>

    </div>
}
